<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">
    
    
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolabr_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/close_settings_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"></TextView>
                <TextView
                    android:id="@+id/update_settings_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"></TextView>


            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/settings_profile_image"
       android:layout_width="130dp"
       android:layout_height="130dp"
       android:src="@drawable/profile"
       android:layout_below="@+id/app_bar_settings"
       android:layout_marginTop="20dp"
       android:layout_centerHorizontal="true"
       />
    <!--
    <TextView
        android:id="@+id/profile_image_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change profile"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/settings_profile_image"
        android:layout_alignParentEnd="true"></TextView>
-->
    <EditText
        android:id="@+id/settings_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_profile_image"
        android:hint="Your firstname"
        android:layout_margin="15dp"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/settings_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_firstname"
        android:hint="Your lastname"
        android:layout_margin="15dp"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/settings_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_lastname"
        android:hint="Your adress"
        android:layout_margin="15dp"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/settings_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_adress"
        android:hint="Your phonenumber"
        android:layout_margin="15dp"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/settings_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_phone_number"
        android:hint="Your password"
        android:layout_margin="15dp"
        android:padding="10dp"/>

</RelativeLayout>